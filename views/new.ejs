<div class="form-container">
  <h2>Add your AI-generated game</h2>
  <p>Share your game with the community - no registration required!</p>

  <form action="/games" method="POST" class="game-form">
    <div class="form-group">
      <label for="title">Game Title *</label>
      <input type="text" id="title" name="title" required />
    </div>

    <div class="form-group">
      <label for="description">Description *</label>
      <textarea
        id="description"
        name="description"
        rows="4"
        required
      ></textarea>
      <small
        >Briefly describe what your game is about (max. 200 characters)</small
      >
    </div>

    <div class="form-group">
      <label for="gameUrl">Game URL *</label>
      <input type="url" id="gameUrl" name="gameUrl" required />
      <small>Link to the website where your game can be played</small>
    </div>

    <div class="form-group">
      <label for="imageUrl">Image URL *</label>
      <input type="url" id="imageUrl" name="imageUrl" required />
      <small>Link to a screenshot or preview image of your game</small>
    </div>

    <div class="form-group">
      <label for="xProfile">X (Twitter) Profile</label>
      <input type="text" id="xProfile" name="xProfile" />
      <small>Your X profile (optional, e.g. @username)</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Add Game</button>
      <a href="/" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>
